<div class="card">
    <div class="card-body">
        <h3>Editar produto</h3>
        <form action="/produtos/editProduto" method="post">
        <input type="hidden" name="id" value="{{produto._id}}">
            <label for="descricao">Descricao: </label>
            <input type="text" name="descricao" class="form-control" value="{{produto.descricao}}">

            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="precoCusto">Preço de custo: </label>
                    <input type="text" name="precoCusto" class="form-control" value="{{produto.precoCusto}}">
                </div>
                <div class="form-group col-md-2">
                    <label for="precoVenda">Preço de venda: </label>
                    <input type="text" name="precoVenda" class="form-control" value="{{produto.precoVenda}}">
                </div>
                <div class="form-group col-md-2">
                    <label for="pesoOuMedida">Peso ou medida: </label>
                    <select name="pesoOuMedida" id="pesoOuMedida" class="form-control">
                        <option value="kg">KG</option>
                        <option value="un">UN</option>
                    </select>
                </div>
            </div>
            <br>
            <button type="submit" class="btn btn-success">Salvar</button>
        </form>
    </div>
</div>
<a href="/produtos">Voltar</a>