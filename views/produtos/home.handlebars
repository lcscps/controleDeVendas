    <h3>Lista de produtos</h3>
    <a href="/produtos/add"><button class="btn btn-success">Novo</button></a>
<br><br>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Descricao</th>
            <th scope="col">Preço de custo</th>
            <th scope="col">Preço de venda</th>
            <th scope="col">valor</th>
            <th scope="col" colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        {{#each produto}}
        <tr>
            <th scope="row">{{@index}}</th>
            <td>{{descricao}}</td>
            <td>{{precoCusto}}</td>
            <td>{{precoVenda}}</td>
            <td>{{pesoOuMedida}}</td>
            <td><a href="/produtos/edit/{{_id}}">Editar</a></td>
            <td><a href="/produtos/delete/{{_id}}">Remover</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>